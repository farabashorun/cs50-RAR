<div class="container">

  <div class="row">

    <div class="col-6">
      <h1>Book <%= @reptile.name %> </h1>


      <%= simple_form_for [@reptile, @booking] do |f| %>
        <%= f.input :start_date, as: :date, html5: true %>
        <%= f.input :end_date, as: :date, html5: true %>
        <%= f.submit class: 'bttn', value: "book"%>
      <% end %>

    </div>

    <div class="col-6">

      <% if @reptile.photo.attached? %>
        <%= cl_image_tag @reptile.photo.key, height:500, width:600 %>
      <% end %>

    </div>

  </div>
    <div class="m-3">
          <%= link_to(reptiles_path, class: "bttn", style: "--color: #3d673e;") do %>
          back to reptiles
          <% end %>
      </div>

</div>
