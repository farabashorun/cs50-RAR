<h1><%= @reptile.name %></h1>
<ul>
<li><%= @reptile.species %>
<li><%= @reptile.description %>
<li><%= @reptile.daily_price %>
</ul>

<% if @reptile.photo.attached? %>
<%= cl_image_tag @reptile.photo.key, height:500, width:600 %>
<% end %>

<div class="d-flex justify-content-around">

    <div class="m-3">
        <%= link_to(new_reptile_booking_path(@reptile), class: "bttn", style: "--color: #3d673e;") do %>
        <span></span>
        <span></span>
        <span></span>
        <span></span>
        book
        <% end %>
    </div>

    <div class="m-3">
        <%= link_to(reptiles_path, class: "bttn", style: "--color: #3d673e;") do %>
        back
        <% end %>
    </div>

    <div class="m-3">
    <%= link_to "Delete Reptile", reptile_path(@reptile), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this reptile?" }, class: "bttn", style: "--color: #3d673e;"  %>
    </div>
</div>



  <div class="messagebox">
    <h5 class="modal-title">Delete Reptile</h5>
    <p>Are you sure you want to delete this reptile?</p>

    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
    <%= link_to(reptiles_path, class: "btn btn-secondary") do %>
      Delete Reptile
      <%# @reptile.destroy %>
    <% end %>
  </div>

  <div class="modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Delete Reptile</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete this reptile?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>

      </div>
    </div>
  </div>

</div>
