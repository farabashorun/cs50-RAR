
<h1>List your Reptile</h1>


<div class="m-3">
    <%= link_to(reptiles_path, class: "bttn", style: "--color: #3d673e;") do %>
    back
    <% end %>
</div>
<div>

<div class="container">

  <div class="row">

    <div class="col-3">
      <%= simple_form_for(@reptile) do |f| %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :species %>
      <%= f.input :daily_price %>
    </div>
    <div class="col-5">
    <%= f.input :photo, as: :file  %>
    </div>
    <%= f.submit class: 'bttn' %>
    <% end %>
    </div>
</div>


