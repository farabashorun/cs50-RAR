<h1>Create a new reptile listing</h1>

<%= simple_form_for(@reptile) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :species %>
  <%= f.text_field :species %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :daily_price %>
  <%= f.number_field :daily_price %>
  <%= f.input :photo, as: :file  %>
  <%= f.submit %>
<%= form.file_field :avatar, direct_upload: true %>
<% end %>
