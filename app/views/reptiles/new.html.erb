<h1>Create a new reptile listing</h1>

<%= link_to '< back to Reptiles list', reptiles_path %>

<div class="container">

  <div class="row">

    <div class="col-3">
      <%= simple_form_for(@reptile) do |f| %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :species %>
      <%= f.input :daily_price %>
    </div>
    <div class="col-5">
    <%= f.input :photo, as: :file  %>
    </div>
    <%= f.submit %>
    <% end %>
    </div>
</div>
