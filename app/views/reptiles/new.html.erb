<div class="m-5">
  <h1>List your Reptile</h1>

  <div class="container">

    <div class="row">

      <div class="col-6">
        <%= simple_form_for(@reptile) do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :species %>
        <%= f.input :daily_price %>
      </div>
      <div class="col-6">
      <%= f.input :photo, as: :file  %>
      </div>
      <%= f.submit class: 'bttn' %>
      <% end %>
    </div>
  </div>
</div>

<div class="button-right">
  <%= link_to(reptiles_path, class: "bttn", style: "--color: #3d673e;") do %>
  back
  <% end %>
</div>
